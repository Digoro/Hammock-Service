<div id="video-container">
  <video autoplay loop class="fillWidth">
    <source src="/img/NYC-Traffic.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
    <source src="/img/NYC-Traffic.webm" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
  </video>
</div>
<div id="container">
  
  <h1>가입하기</h1>
  <br><br><br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder=>"이메일" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :placeholder=>"비밀번호(최소8자리)" %>
    </div>
  
    <div class="field">
      
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "비밀번호 확인" %>
    </div>
  
    <div class="actions">
      <%= f.submit "가입하기" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>